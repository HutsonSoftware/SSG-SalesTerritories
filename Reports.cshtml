@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "Sales Report";
    Page.Subheader = "Sales by Address";

    var db = Database.Open("SSG-SalesTerritories");
    var salons = db.Query("SELECT t.Name as TerritoryName, x.Address, x.SalesAmtSum, x.City, x.State, x.Zip "
        + "FROM ("
        + "SELECT t.TerritoryID, s.Address, SUM(s.SixMonthSales) as SalesAmtSum, s.City, s.State, s.Zip "
        + "FROM Salon s "
        + "INNER JOIN Mapping m on s.SalonID=m.SalonID "
        + "INNER JOIN Territory t on m.TerritoryID=t.TerritoryID "
        + "GROUP BY t.TerritoryID, s.City, s.State, s.Zip, s.Address"
        + ") x "
        + "INNER JOIN Territory t on x.TerritoryID=t.TerritoryID");
    var grid = new WebGrid(salons, ajaxUpdateContainerId: "grid");                    
}

<hgroup class="title">
    <h1>@Page.Title</h1>
    <h2>@Page.Subheader</h2>
</hgroup>
<article>
     <style type="text/css"> 
            .grid { margin: 4px; border-collapse: collapse; width: 600px; } 
            .head { background-color: #E8E8E8; font-weight: bold; color: #FFF; } 
            .grid th, .grid td { border: 1px solid #C0C0C0; padding: 5px; } 
            .alt { background-color: #E8E8E8; color: #000; }
     </style> 
    @grid.GetHtml(tableStyle: "grid",
                    headerStyle: "head",
                    alternatingRowStyle: "alt",
                    columns: grid.Columns(
                    grid.Column("TerritoryName", "Territory Name"),
                    grid.Column("Address"),
                    grid.Column("City"),
                    grid.Column("State"),
                    grid.Column("Zip"),
                    grid.Column("SalesAmtSum", "Total Sales", format:@<text>$@String.Format("{0:0.00}", item.SalesAmtSum)</text>)
                )
    )
</article>
